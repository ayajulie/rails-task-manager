<h1><%= @task.title%></h1>
<p><%= @task.details%></p>
<%= check_box_tag "task_#{@task.id}", @task.completed, @task.completed? %>
<ul>
  <li> <%= link_to 'Edit', edit_path(@task) %></li>
  <li><%= link_to "Destroy", task_path(@task),
method: :delete,
data: { confirm: "Are you sure?" } %></li>
  <li> <%= link_to 'Back to list', tasks_path(@tasks) %></li>
</ul>
