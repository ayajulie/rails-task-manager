<%= form_with model: @task, class: 'form-group' do |form| %>
  <div class='form-group'>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @task.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class='form-group'>
    <%= form.label :details %><br>
    <%= form.text_area :details %><br>
    <% @task.errors.full_messages_for(:details).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class = 'form-check'>
    <%= form.label :completed  %>
    <%= form.check_box :completed %><br>
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
